{% assign pageUrl = Request.Path %}
{% assign pageId = Model.ContentItem.ContainedPart.ListContentItemId %}

<div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
        <p class="lead">{{ Model.ContentItem }}</p>
        <p>Posted on {{ Model.ContentItem.CreatedUtc | date: "%b %d, %y %H:%M" }}</p>
        <hr>
        <img class="img-fluid rounded" src="{{ Model.ContentItem.Content.News.Image.Paths | asset_url }}" alt="">
        <hr>
        <p class="lead">{{ Model.ContentItem.Content.MarkdownBodyPart.Markdown | markdownify | raw }}</p>
        {% capture aaa %}{{ Model.ContentItem.Content.News.Content.Html }}{% endcapture %}
        <article>{{ aaa | raw }}</article>
        <hr>
        {% for item in Model.ContentItem.Content.News.Attachments.Paths %}
        <a href="/media/{{ item }}">{{item}}</a>
        <br />
        {% endfor %}
        <br />
        <hr>
    </div>
    {% comment %} <div class="col-md-4">
        <!-- Search Widget -->
        <div class="card mb-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">Web Design</a>
                            </li>
                            <li>
                                <a href="#">HTML</a>
                            </li>
                            <li>
                                <a href="#">Freebies</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a href="#">JavaScript</a>
                            </li>
                            <li>
                                <a href="#">CSS</a>
                            </li>
                            <li>
                                <a href="#">Tutorials</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new
                Bootstrap 4 card containers!
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <hr>

        <div id="disqus_thread"></div>
    </div>
</div>

<script>

    /**
